%div.container-fluid
  %div.row-fluid
    = form_for @user, url: '/session' do |f|
      %div
        = f.label :email
        = f.text_field :email, required: true

      %div
        = f.label :password
        = f.password_field :password, required: true

      = f.submit 'OK', class: "btn"

    = link_to 'Signup', new_user_path

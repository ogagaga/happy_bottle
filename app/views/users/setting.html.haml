%div.container-fluid
  %div.row-fluid
    = form_for @user do |f|
      %div
        = f.label :name
        = f.text_field :name, required: true

      %div
        = f.label :email
        = @user.email

      %div
        = f.label :password
        = f.password_field :password, required: true

      = f.submit 'OK', class: "btn"

    = link_to 'Signup', new_user_path

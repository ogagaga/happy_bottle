%div.container-fluid
  %div.row-fluid
    = form_for @user do |f|
      %div
        = f.label :name
        = f.text_field :name, required: true

      %div
        = f.label :email
        = f.text_field :email, disabled: true

      %div
        = f.label :password
        = f.password_field :password, required: true

      = f.submit 'OK', class: "btn"
